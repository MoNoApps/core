.row(ng-if='challenge')
  table.table.text-center
    thead
      tr
        th(colspan='4') Current Challenge
    tbody
      tr
        td.info
          i.fa.fa-server &nbsp;
            span(ng-bind='challenge.name')
        td.success
          span &nbsp; {{level}} /{{challenge.length}}
        td.info
          i.fa.fa-diamond &nbsp;
            span(ng-bind='gems')
        td(ng-class='status')
          i.fa.fa-clock-o &nbsp;
            span(ng-bind='time')
        td.td-zero.success(ng-if='status=="active"')
          a.btn-play.btn-table.btn.btn-success(ng-click='act("play")')
            i.fa.fa-play
        td.td-zero.warming(ng-if='status=="warning"')
          a.btn-play.btn-table.btn.btn-warning(ng-click='act("pause")')
            i.fa.fa-pause
        td.td-zero.active(ng-if='status=="danger"')
          a.btn-play.btn-table.btn.btn-warning(ng-click='act("play")')
            i.fa.fa-circle-o-notch
