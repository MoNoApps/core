.row
  form.form.form-horizontal.col-md-12(name="loginForm")
    .form-group
      span.col-md-3.control-label Email/Username
      .col-md-9
        input.form-control(type="email", ng-model="user.email"
          required="required", placeholder="Email")
    .form-group
      span.col-md-3.control-label Password
      .col-md-9
        input.form-control.col-md-9(type="password", ng-model="user.password"
          required="required", placeholder="Password")
    .form-group
      .col-md-9.col-md-offset-3
        a.col-md-12(ng-click="login()",
          ng-disabled="loginForm.$error.email || !user.email || !user.password",
          class="btn btn-primary", data-dismiss="modal") Login
      .col-md-9.col-md-offset-3
        .col-md-6
          a(ng-click="recovery()") Recovery password
        .col-md-6
          a(ng-click="signup()") Create an account
    .form-group
      

  
