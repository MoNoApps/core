.jumbotron.ng-cloack(ng-controller='HomeController', ng-show='!token')
  var(ng-init='model= #{JSON.stringify(model)}')
  .row
    .col-md-6
      h1.text-center Deck Tools
      p
      a.btn.btn-primary.btn-lg.col-xs-12.col-md-12(ng-click='enableView("register")') Join Me
    .row.col-md-6
      .alert.alert-success.alert-dismissible(role="alert", ng-if='alert')
        button(type='button', class='close', data-dismiss='alert', aria-label='Close')
          span(aria-hidden='true') &times;
        strong Message: &nbsp;
        span {{alert}}
      .alert.alert-danger.alert-dismissible(role="alert", ng-if='error')
        button(type='button', class='close', data-dismiss='alert', aria-label='Close')
          span(aria-hidden='true') &times;
        strong Error: &nbsp;
        span {{error}}
      include ../forms/login
      include ../forms/register
      include ../forms/recover
