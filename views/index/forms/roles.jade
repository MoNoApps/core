form.form-horizontal(name="modelForm")
  fieldset
    .form-group
      label.col-md-2.control-label Name
      .col-md-10
        input.form-control(required='required',
          type='text', ng-model='$parent.edit.name')
    .form-group
      label.col-md-2.control-label Read-only 
      .col-md-10
        pre
          code(class="language-js") {{$parent.edit.readonly || '^'}}
    .form-group
      label.col-md-2.control-label Resources
      .col-md-10
        pre
          code(class="language-js") {{parent.edit.resources || '^'}}
    include actions
