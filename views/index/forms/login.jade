form.form.form-horizontal.col-md-12(name='loginForm', ng-show='isEnabledView("login")')
  .form-group
    span.col-md-3.control-label Email
    .col-md-9
      input.form-control(type='email', ng-model='user.email'
        required='required', placeholder='Email')
  .form-group
    span.col-md-3.control-label Password
    .col-md-9
      input.form-control.col-md-9(type='password', ng-model='user.password'
        ng-keyup='$event.keyCode == 13 ? login() : null',
        required='required', placeholder='Password')
  .form-group
    .col-md-9.col-md-offset-3
      a.btn.btn-primary.col-md-12#loginLink(ng-click='login()'
        ng-disabled='loginForm.$error.email || !user.email || !user.password') Login
    .col-md-9.col-md-offset-3
      .col-md-6
        a.pointer#recoverLink(ng-click='enableView("recover")') Recover password
      .col-md-6
        a.pointer#newAccountLink(ng-click='enableView("register")') Create an account
  .form-group
      
