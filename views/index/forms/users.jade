form.form-horizontal
  fieldset
    .form-group
      label.col-lg-2.control-label Email
      .col-lg-10
        input#inputEmail.form-control(type='email', ng-model='$parent.edit.email')
    .form-group
      label.col-lg-2.control-label Name
      .col-lg-10
        input#inputEmail.form-control(type='text', ng-model='$parent.edit.name')
    .form-group
      .col-lg-10.col-lg-offset-2
        button.btn.btn-default.col-lg-12(ng-click='$parent.update()') Update
