#iconsModal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
        h4.modal-title Icons on this challenge
      .modal-body.row
        .col-md-12.col-xs-12.icon-list(ng-show='icons.length')
          span.col-xs-3.col-sm-2.col-md-1.icon-sample(ng-repeat='e in icons', ng-bind='e.icon')
      .modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") Close
