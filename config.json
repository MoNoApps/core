{
  "dburl": "mongodb://127.0.0.1/decktools",
  "port": {
    "web": 1344,
    "api": 1345,
    "sio": 1346,
    "rds": 6379
  },
  "mandril":{
    "from": "decktool@mail.co",
    "name": "Decks Tools",
    "token": ""
  },
  "TTL": 84000,
  "URL": {
    "ACK": "http://deck.monoapps.co/api/email/confirm/"
  },
  "APIVARS": {
    "PRE": "/",
    "ID": "/:id"
  },
  "resources": {
    "tokens":  { "param": "token", "exclude": true },
    "users":  {
      "param": "user",
      "schema": {
        "name":  1,
        "email": 1
      }
    },
    "groups": {
      "param": "group",
      "schema": {
        "name": 1
      }
    },
    "roles":  {
      "param": "role",
      "schema": {
        "name":  1,
        "readonly": 1,
        "resources": 1
      }
    },
    "tasks":  {
      "param": "task",
      "schema": {
        "name": 1
      }
    },
    "products":  {
      "param": "product",
      "exclude": true,
      "schema": {
        "name": 1,
        "code": 1,
        "price": 1,
        "sizes": 1,
        "image": 1,
        "comments": 1
      }
    }
  }
}
