{
  "dburl": "mongodb://127.0.0.1/decktools",
  "port": {
    "web": 1344,
    "api": 1345,
    "sio": 1346,
    "rds": 6379
  },
  "mandril":{
    "from": "decktool@mail.co",
    "name": "Decks Tools",
    "token": ""
  },
  "APIVARS": {
    "PRE": "/",
    "ID": "/:id"
  },
  "resources": {
    "tokens":  { "param": "token", "exclude": true },
    "users":  { 
      "param": "user",
      "schema": {
        "name":  1,
        "email": 1
      } 
    },
    "groups": { 
      "param": "group",
      "schema": {
        "name": 1
      } 
    },
    "roles":  { 
      "param": "role",
      "schema": {
        "name":  1,
        "readonly": 1,
        "resources": 1
      } 
    },
    "tasks":  { 
      "param": "task",
      "schema": {
        "name": 1
      }
    }
  }
}
