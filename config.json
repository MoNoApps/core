{
  "dburl": "mongodb://127.0.0.1/coreapp",
  "site": "Core App",
  "theme": "/themes/paper.min.css",
  "port": {
    "web": 1344,
    "api": 1345,
    "rds": 6379
  },
  "mandril":{
    "from": "noreply@wrine.co",
    "name": "Core App",
    "token": ""
  },
  "TTL": 84000,
  "URL": {
    "BASE": "http://core.wrine.co",
    "ACK": "/api/email/confirm/",
    "REC": "/api/email/recover/"
  },
  "APIVARS": {
    "PRE": "/",
    "ID": "/:id",
    "PLUGINS": {
      "DIR":"/plugins",
      "MAIN": "/plugin.js",
      "VIEWS": "/views",
      "CONFIG": "/config.json"
    }
  },
  "plugins": [
    "wizard"
  ],
  "pages":[
    "account",
    "recover",
    "registered",
    "docs",
    "dev"],
  "resources": {
    "tokens": {
      "admin": true,
      "param": "token",
      "exclude": true
    },
    "settings": {
      "admin": false,
      "param": "setting",
      "exclude": true
    },
    "users": {
      "admin": true,
      "param": "user",
      "clean": {"password": 1},
      "schema": {
        "name":  1,
        "date": 1,
        "email": 1,
        "status": 1,
        "role": 1
      }
    },
    "groups": {
      "param": "group",
      "schema": {
        "name": 1
      }
    },
    "roles":  {
      "param": "role",
      "schema": {
        "name":  1,
        "readonly": 1,
        "resources": 1
      }
    },
    "tasks":  {
      "param": "task",
      "schema": {
        "name": 1,
        "status": 1
      }
    },
    "products":  {
      "param": "product",
      "schema": {
        "name": 1,
        "code": 1,
        "price": 1,
        "image": 1,
        "comments": 1
      }
    }
  }
}
